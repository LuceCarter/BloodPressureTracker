<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodPressureTracker.Views.AboutPage"
             xmlns:vm="clr-namespace:BloodPressureTracker.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>   
    

    <StackLayout>       
            <Label Text="Made with love by Luce Carter" HorizontalOptions="Center"/>
            <Label Text="Icons courtesy of FlatIcons" VerticalOptions="EndAndExpand" HorizontalOptions="Center" />       
    </StackLayout>

</ContentPage>

